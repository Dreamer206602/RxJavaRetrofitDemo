<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.booboomx.rxjavaretrofitdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".ui.activity.JdActivity" />
        <activity android:name=".ui.activity.TMallActivity" />
        <activity android:name=".ui.activity.RxJavaActivity" />
        <activity android:name=".ui.activity.LoadWebViewActivity" />
        <activity android:name=".ui.activity.ImageActivity" />
        <activity android:name=".ui.activity.RecyclerViewLinearActivity" />
        <activity
            android:name=".ui.activity.system.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ui.activity.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.system.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.activity.system.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.system.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ui.activity.system.MainActivity"
            android:label="@string/title_activity_main" />
        <activity android:name=".ui.activity.BottomDialogActivity" />
        <activity android:name=".ui.activity.OfoEyeActivity" />
        <activity android:name=".ui.activity.DragPhotoActivity"></activity>
    </application>

</manifest>